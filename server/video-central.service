[Unit]
Description=Video Central Server
After=network.target

[Service]
User=www-data
WorkingDirectory=/opt/video-central
ExecStart=/usr/bin/php -d upload_max_filesize=2G -d post_max_size=2G -d max_execution_time=600 -S 0.0.0.0:8000 central_server.php
Restart=always
Environment="AUTH_TOKEN=SECRET_TOKEN_123"

[Install]
WantedBy=multi-user.target
